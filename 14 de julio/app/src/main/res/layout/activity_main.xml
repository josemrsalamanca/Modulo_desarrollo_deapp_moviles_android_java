<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="380dp"
        android:layout_height="201dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/codigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/codigo"
            android:inputType="textPersonName"
            android:textColorHint="#0C0C0C" />

        <EditText
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/nombre"
            android:inputType="textPersonName"
            android:textColorHint="#0B0A0A" />

        <EditText
            android:id="@+id/precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/precio"
            android:inputType="textPersonName"
            android:textColorHint="#0C0C0C" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="316dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/crearProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/crearProducto"
            android:onClick="crearProducto"
            android:textColorHint="#FAF3F3" />

        <Button
            android:id="@+id/buscarProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/buscarProducto"
            android:textColorHint="#FDF6F6" />

        <Button
            android:id="@+id/modificarProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/modificarProducto"
            android:textColorHint="#FAF6F6" />

        <Button
            android:id="@+id/eliminarProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/eliminarProducto"
            android:textColorHint="#FAF1F1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>